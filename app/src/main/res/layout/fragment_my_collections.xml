<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.magpiehunt.magpie.Fragments.CollectionFragment"
    android:background="@color/colorMagpieWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_addCollection_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Collections"
        android:textSize="18sp"
        android:fontFamily="@font/advent_pro_thin"
        android:textStyle="bold"
        android:layout_gravity="center|top"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorMagpieLightGray"
        android:background="@drawable/add_collections_button_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMagpieLightGray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>